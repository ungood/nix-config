{
  "permissions": {
    "allow": [
      "Bash(just:*)",
      "Bash(nix:*)",
      "Bash(statix:*)",
      "Task(subagent_type:product-owner)",
      "Task(subagent_type:architect)",
      "Task(subagent_type:implementation-agent)",
      "Task(subagent_type:review-agent)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "gh issue create",
        "hooks": [
          {
            "type": "command",
            "command": "/home/ungood/nix-config/.claude/hooks/issue-created.sh"
          }
        ]
      },
      {
        "matcher": "gh pr create",
        "hooks": [
          {
            "type": "command",
            "command": "/home/ungood/nix-config/.claude/hooks/pr-created.sh"
          }
        ]
      }
    ]
  }
}
